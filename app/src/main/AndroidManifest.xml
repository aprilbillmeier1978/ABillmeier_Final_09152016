                <action android:name="mobile.rasmussen.edu.afinal.TreasureThree" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TreasureFour"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="mobile.rasmussen.edu.afinal.TreasureFour" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TreasureFive"

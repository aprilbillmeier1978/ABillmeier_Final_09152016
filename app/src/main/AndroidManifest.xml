                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Help"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="mobile.rasmussen.edu.afinal.Help" />


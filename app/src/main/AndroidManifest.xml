        </activity>

        <activity
            android:name=".UserProfile"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="mobile.rasmussen.edu.afinal.UserProfile" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".GamePlay"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="mobile.rasmussen.edu.afinal.GamePlay" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TreasureOne"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="mobile.rasmussen.edu.afinal.TreasureOne" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
